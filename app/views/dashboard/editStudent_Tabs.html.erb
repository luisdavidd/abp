<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Add Students</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Edit Students</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="home">      
      <table class="display responsive" id="addRowTable" style="width:100%" >
        <thead>
          <tr>
            <th style="display:none" name="id"></th>
            <!-- <th>Id</th> -->
            <th name="name">Name</th>
            <th name="last_name">Last Name</th>
            <th name="email">Email</th>
            <th name="saldo">Budget</th> 
            <th name="codigo">Code</th> 
          </tr>
        </thead>
      </table>

      <br><button id="addRow" class="btn btn-default">Add New Student</button>
    </div>

    <div role="tabpanel" class="tab-pane fade" id="profile">
      
      <table class="display responsive" id="students" style="width:100%">
        <thead>
          <tr>
            <th style="display:none" name="id"></th>
            <!-- <th>Id</th> -->
            <th name="name">Name</th>
            <th name="last_name">Last Name</th>
            <th name="email">Email</th>
            <th name="saldo">Budget</th> 
            <th name="codigo">Code</th> 
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td style="display:none;" id="zero"><%= user.id %></td>
              <!-- <td id="userid"><%= user.id %></td> -->
              <td><%= user.name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.saldo %></td>
              <td><%= user.codigo %></td>        
            </tr>
          <% end %>

        </tbody>
      </table>

    </div>
  </div>

</div>

<script type="text/javascript">

$('#myTabs a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})

