<div id="Content">
	<div class="row">
	
  		<div id="content" class="col-lg-12 col-md-8" style="padding-left:40px">
  			<h2>Notifications</h2>
  			<table class="display responsive" id="notifications_table" style="width:100%">
		        <thead>
		         	<tr>
			            <th>NRC</th>
			            <th>Notification</th> 
			            <th>Date</th>
		          	</tr>
		        </thead>

	        	<tbody>
					<% @info_array.each do |notif| %>
            			<tr>
            				<td><%= notif[:nrc] %></td>	
			             	<td><a href="<%=notif[:url]%>"><%= notif[:msg] %></a></td>
			             	<td><%= notif[:date].to_time.strftime('%A %b %d %Y at %I:%M %Z %p') %></td>
            			</tr>
          			<% end %>

        		</tbody>
	      	</table>
  		</div>
	</div> 
</div>
<style type="text/css">
	#content{
		padding-right: 5vh;
	}
</style>
<script type="text/javascript">
	var table = $('#notifications_table').DataTable( {
		responsive: true
	});


</script>

