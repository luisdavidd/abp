		        		<% end %>
		        	</tbody>
		        </table>
	      	</div>
	      	
	      	
	      	<!-- /.box-body -->
	    </div>


	    <div id="infoDiv2" style="display: none;">
	    	<table class="table responsive" id="plans2">
		        <thead>
		         	<tr>
			            <!-- <th>Id</th> -->
			            <th name="week">Week</th>
			            <th name="date">Date</th>
			            <th name="fee">Fee</th>
		         	</tr>
		        </thead>
		    </table>

