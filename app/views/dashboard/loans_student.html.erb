      	<!-- /.box-body -->
    </div>

    <div id="infoDiv1" style="display: none;">
    	<table class="table responsive" id="plans">
	        <thead>
	         	<tr>
		            <!-- <th>Id</th> -->
		            <th name="week">Week</th>
		            <th name="date">Date</th>
		            <th name="fee">Fee</th>
	         	</tr>
	        </thead>
	    </table>
	    <h5>*Loan payments start next week to approval. Actual schedule may vary.</h5>
	    <br>

