</div>

<script type="text/javascript">
$('a[aria-controls="add_students"]').on('shown.bs.tab', function (e) {
  e.target // newly activated tab
  e.relatedTarget // previous active tab
  $('#editS').html('');
  $('#clases').html('');
  $('#addS').html('<%= j render 'addS' %>');  
});

$('a[aria-controls="edit_students"]').on('shown.bs.tab', function (e) {
  e.target // newly activated tab
  e.relatedTarget // previous active tab
  $('#addS').html('');
  $('#clases').html('');
  $('#editS').html('<%= j render 'editS' %>');
});

$('a[aria-controls="clase"]').on('shown.bs.tab', function (e) {
  e.target // newly activated tab
  e.relatedTarget // previous active tab
  $('#addS').html('');
  $('#editS').html('');
  $('#clases').html('<%= j render 'class_confg' %>');
});
$('#clases').html('<%= j render 'class_confg' %>');
</script>