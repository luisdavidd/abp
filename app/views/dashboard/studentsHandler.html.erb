<div>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <% if current_user.superadmin==true%>
      <li role="presentation"><a href="#add_class" aria-controls="add_class" role="tab" data-toggle="tab">Classes</a></li>
    <% end %>
    <li role="presentation" class="active"><a href="#clase" aria-controls="clase" role="tab" data-toggle="tab">Courses</a></li>
    <li role="presentation"><a href="#edit_students" aria-controls="edit_students" role="tab" data-toggle="tab">Edit Students</a></li>
    
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="clase">
      <p id="clases"></p>
    </div>
    <div role="tabpanel" class="tab-pane" id="add_class">
      <p id="addclass"></p>
    </div>
    <div role="tabpanel" class="tab-pane" id="edit_students">
      <p id="editS"></p>
    </div>
    <div role="tabpanel" class="tab-pane" id="settings">...</div>
  </div>
</div>

<script type="text/javascript">
$('a[aria-controls="add_class"]').on('shown.bs.tab', function (e) {
  e.target // newly activated tab
  e.relatedTarget // previous active tab
  $('#editS').html('');
  $('#clases').html('');
  $('#addclass').html('<%= j render 'addclass' %>');  
});

$('a[aria-controls="edit_students"]').on('shown.bs.tab', function (e) {
  e.target // newly activated tab
  e.relatedTarget // previous active tab
  $('#addclass').html('');
  $('#clases').html('');
  $('#editS').html('<%= j render 'editS' %>');
});

$('a[aria-controls="clase"]').on('shown.bs.tab', function (e) {
  e.target // newly activated tab
  e.relatedTarget // previous active tab
  $('#addclass').html('');
  $('#editS').html('');
  $('#clases').html('<%= j render 'class_confg' %>');
});

$('#clases').html('<%= j render 'class_confg' %>');
</script>