<head>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>

</head>
<%= devise_error_messages! %>
<div class="login">
  <header class="login-header"><span class="text">Registro</span><span class="loader"></span></header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login-form") do |f| %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, class:"login-input", placeholder: 'Nombre Completo'  %>
  </div>

  <div class="field">
    <%= f.number_field :codigo, in: 200000000..299999999, autocomplete: "off", class:"login-input", placeholder: 'Código' %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, class:"login-input", placeholder: 'Correo Uninorte'  %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
      <% mensaje = " - Mínimo #{@minimum_password_length} caracteres" %> 
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class:"login-input",placeholder: "Contraseña #{mensaje}" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"login-input", placeholder: "Repita la contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"login-btn" %>
  </div>
<% end %>
<br>

<div class="login-form">
<%= render "devise/shared/links" %>
</div>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
